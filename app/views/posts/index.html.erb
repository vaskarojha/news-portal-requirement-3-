<h2 class="text-center">Read Latest technology related news.</h2>
<% @posts.each do |post| %>
  <div class="jumbotron bg-light">
    <h3 class="text-success"><u><%= post.title %></u></h3>
    <p><%= post.body %></p>
    <%= link_to "View Comments", post_path(post), :class => 'float-right btn btn-primary' %>

  </div>
<%end%>
